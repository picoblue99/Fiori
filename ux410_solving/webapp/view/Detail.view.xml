<mvc:View 
    controllerName="sap.btp.ux410solving.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m" 
    xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap">
<uxap:ObjectPageLayout >
<uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:expandedHeading>
                    <HBox>
                        <Title id='idTitle' text="" wrapping="true"/>
                    </HBox>
                </uxap:expandedHeading>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
            <FlexBox wrap="Wrap">
                <l:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <Label text="Order detail view detail"/>
                </l:VerticalLayout>
            </FlexBox>
        </uxap:headerContent>

   <uxap:sections>
         <uxap:ObjectPageSection titleUppercase="false" title="my section">
            <uxap:subSections>
                <uxap:ObjectPageSubSection title="Info" mode="Expanded" titleUppercase="false">
                <f:SimpleForm >
                <f:content>
                
                    <Label text="OrderID" />
                    <Text text="{OrderID}"/>
                    <Label text="ProductID" />
                    <Text text="{ProductID}"/>
                    <Label text="UnitPrice" />
                    <Text text="{UnitPrice}"/>
                    <Label text="Quantity" />
                    <Text text="{Quantity}"/>
                    <Label text="Discount" />
                    <Text text="{Discount}"/>
                
                    </f:content>
                
                </f:SimpleForm>
            </uxap:ObjectPageSubSection>
        </uxap:subSections>
    </uxap:ObjectPageSection>
</uxap:sections>
    </uxap:ObjectPageLayout>
   
</mvc:View>
